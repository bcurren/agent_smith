<div id="simplechart" style="width: 1900px; height: 750px;"></div>
<div id="legend1"></div>

<script type="text/javascript" charset="utf-8">
  dojo.require("outright.Application");
  dojo.require("outright.charting.Chart2D");
  dojo.require("dijit.Dialog"); 

  dojo.addOnLoad(function() { 
    dojo.xhrGet({
      url: "/<%- report %>.json",
      handleAs: "json",
      load: function(data) {
        new outright.charting.Chart2D("simplechart", "legend1", data, 
        [
          {
            plot: "users",
            type: "Lines",
            seriesIndex: 0
          },
          {
            plot: "users",
            type: "Lines",
            seriesIndex: 1
          },
          {
            plot: "users",
            type: "Lines",
            seriesIndex: 2
          }          
        ]);
      },
      error: function(error) {
        var dialog = new dijit.Dialog({
          title: "Error loading report data",
          content: error.message,
          style: "width: 450px"
        });
        dialog.show();
      }
    });
  });
</script>
